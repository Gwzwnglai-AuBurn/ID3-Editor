<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099ff">

    <ImageView
    android:id="@+id/ImageView_Arjay"
    android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"

        android:layout_width="250dp"
    android:layout_height="150dp"
    android:background="@drawable/arjay"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/TextView_net"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#66ff66"
        android:text="Click to scan cloud"/>
    <!--<corners android:bottomRightRadius="20dp"-->
        <!--android:bottomLeftRadius="20dp"-->
        <!--android:topLeftRadius="20dp"-->
        <!--android:topRightRadius="20dp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->



    <TextView
        android:layout_below="@+id/TextView_net"
        android:id="@+id/TextView_local"
        android:enabled="false"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="20dp"
        android:gravity="center"
        android:background="#66ff66"
        android:text="Click to scan local device"/>
    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    </RelativeLayout>
</LinearLayout>