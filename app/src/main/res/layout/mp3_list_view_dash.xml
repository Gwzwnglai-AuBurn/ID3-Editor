<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mp3_list_view_viewForCell"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:layout_margin="10dp"
        android:id="@+id/mp3_list_view_topLinearLay">

        <ImageView
            android:id="@+id/mp3_list_view_rwImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="#00ffffff"
            android:scaleType="centerInside"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical" />

        <TextView android:id="@+id/mp3_list_view_rwTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.80"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:textColor="#ffffff"
            android:background="#000000"
            android:alpha="0.4"
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/hello_world"
            android:textAlignment="center"
            android:minHeight="60dp" />

        <ImageView android:id="@+id/mp3_list_view_rwButton"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:text="L"/>
    </LinearLayout>
</LinearLayout>





